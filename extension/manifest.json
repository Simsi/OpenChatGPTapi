{
  "manifest_version": 3,
  "name": "ChatGPT Web Bridge (Debug)",
  "version": "0.3.8",
  "description": "Bridge ChatGPT Web UI to a local Ollama/OpenAI-compatible server. Robust input injection.",
  "permissions": [
    "scripting",
    "tabs",
    "storage",
    "activeTab",
    "alarms"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "ChatGPT Bridge",
    "default_popup": "popup.html"
  },
  "options_page": "options.html"
}